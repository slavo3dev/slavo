{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": [
                "components/*"
            ],
            "@/components": [
                "components"
            ],
            "@/images/*": [
                "public/images*"
            ],
            "@/lib/*": [
                "lib/*"
            ],
            "@/api/*": [
                "pages/api/*"
            ],
            "@/Types/*": [
                "Types/*"
            ],
            "@/assets/*": [
                "public/assets/*"
            ],
            "@/ui/*": [
                "components/ui/*"
            ],
            "@/styles/*": [
                "styles/*"
            ]
        },
    },
    "include": [
        "next-env.d.ts",
        "next.config.js",
        "src/**/*.ts",
        "src/**/*.tsx",
        "tailwind.config.js",
        "postcss.config.js",
        "next-sitemap.config.js"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}